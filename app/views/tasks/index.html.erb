<h2>Your Tasks </h2>

<h3>Pending Tasks</h3>
<table class="table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Due</th>
      <th>Job</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if task.pending? %>
      <tr>
        <td><%= task.subject %></td>
        <td><%= task.due_date.to_formatted_s(:long) %></td>
        <td><%= task.application.job.name %></td>
        <td><%= task.application.job.company.name %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h3>Completed Tasks</h3>
<table class="table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Completed</th>
      <th>Job</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if !task.pending? %>
      <tr>
        <td><%= task.subject %></td>
        <td><%= task.due_date.to_formatted_s(:long) %></td>
        <td><%= task.application.job.name %></td>
        <td><%= task.application.job.company.name %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>