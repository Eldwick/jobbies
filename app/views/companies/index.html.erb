<div id="jobsWrapper">
<h1>Listing companies</h1>

<%= form_tag(company_search_path, method: :get) do %>
  <div class="form-group">
  <%= text_field :name, nil,  placeholder: "Company Name", class: "form-control" %>
  </div>
  <div class="form-group">
  <%= select(:city, nil, Company.select(:city).uniq.collect {|c| [c.city, c.city]}, prompt: "Pick City", class: "form-control") %>
  </div>
  <div class="form-group">
  <%= select(:category, nil, Company.select(:category).collect {|c| [c.category, c.category]}, prompt: "Pick Category", class: "form-control") %>
  </div>
  <%= submit_tag "Search Companies", class: "btn btn-primary"  %>
<% end %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Num employees</th>
      <th>Rating</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr class='company_row' href="/companies/<%= company.id %>">
        <td><%= company.name %></td>
        <td><%= company.street_address %></td>
        <td><%= company.city %></td>
        <td><%= company.state %></td>
        <td><%= company.zip_code %></td>
        <td><%= company.num_employees %></td>
        <td><%= company.rating %></td>
        <td><%= company.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

