<!DOCTYPE html>
<html>
<head>
  <title>jobr</title>
  <%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false&libraries=geometry' %>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-default" id='header'>
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
      <a id="logoHeader"class="navbar-brand" href="/">
        jobr
      </a>
    </div>
    <div class="collapse navbar-collapse">
      <% if user_signed_in? %>
      <ul id="navLinks" class="nav navbar-nav navbar-left">
        <li><a href="/portal">Portal</a></li>
        <li><a href="/map">Map</a></li>
      </ul>
      <ul id="navLinks" class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Companies<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/companies">All Companies</a></li>
            <li><a href="#">Your Companies</a></li>
            <li class="divider"></li>
            <li><%= link_to("Add a Company", new_company_path) %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Jobs<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/jobs">All Jobs</a></li>
            <li><a href="#">Your jobs</a></li>
            <li class="divider"></li>
            <li><%= link_to("Add a Job", new_job_path) %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contacts<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/contacts">All Contacts</a></li>
            <li><a href="#">Your Contacts</a></li>
            <li class="divider"></li>
            <li><%= link_to("Add a Contact", new_contact_path) %></li>
          </ul>
        </li>
        <li><a href="/applications">Applications</a></li>
        <li><a href="/tasks">Tasks</a></li>
        <li><%= link_to("Account", user_path(current_user)) %></li>
        <li> <%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      </ul>
      <% else %>
      <ul id="navLinks" class="nav navbar-nav navbar-right">
        <li><a href="/register">Sign up</a></li>
        <li><a href="/signin">Sign in</a></li>
      </ul>
      <% end %>
    </div>
  </div>
</header>
<!-- <span class="notice"><%= notice %></span>
<span class="alert"><%= alert %></span> -->
<%= yield %>

</body>
</html>
