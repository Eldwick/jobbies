<div id="registrationWrapper">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group required">
      <%= f.label :first_name, "First Name*" %>
      <%= f.text_field :first_name,class: "form-control", placeholder: "First Name", autofocus: true %>
    </div>
    <div class="form-group required">
      <%= f.label :last_name, "Last Name*" %>
      <%= f.text_field :last_name,class: "form-control", placeholder: "Last Name" %>
    </div>
    <div class="form-group required">
      <%= f.label :email, "Email*" %>
      <%= f.text_field :email,class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
    <div class="form-group ">
      <%= f.label :street_address, "Street Address" %>
      <%= f.text_field :street_address, class: "form-control", placeholder: "e.g. 1400 Main Street" %>
    </div>
    <div class="form-group ">
      <%= f.label :city, "City" %>
      <%= f.text_field :city, class: "form-control", placeholder: "City" %>
    </div>
    <div class="form-group ">
      <%= f.label :state, "State" %>
      <%= f.text_field :state, class: "form-control", placeholder: "State" %>
    </div>
    <div class="form-group required">
      <%= f.label :zip_code, "Zip Code*" %>
      <%= f.text_field :zip_code, class: "form-control", placeholder: "Zip Code" %>
    </div>
    <div class="form-group required">
      <%= f.label :password %> <% if @validatable %><% end %>
      <%= f.password_field :password, class: "form-control", placeholder: "(8 character minimum)", autocomplete: "off" %>
    </div>

    <div class="form-group required">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>
    <%= f.submit "Sign Up", class: "btn btn-success" %>
  <% end %>
<%= render "devise/shared/links" %>
</div>
