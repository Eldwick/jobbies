<h1>Listing applications</h1>

<table class="table">
  <thead>
    <tr>
      <th>Job</th>
      <th>Company</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.job.name %></td>
        <td><%= application.job.company.name %></td>
        <td><%= application.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

