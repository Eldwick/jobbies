<div id="jobsWrapper">
  <h2 class="jobHeader"><%= @job.name %> for <%= link_to(@job.company.name, company_path(@job.company)) %></h2>
  <p class="companyAddress">
   Location: <%= @job.location %>
   <br>
   <%= link_to("About #{@distance} miles away from you", "https://www.google.com/maps/dir/#{@job.location.gsub(" ","+")}/#{current_user.address}", target: "blank") %>
  </p>

<p>
  <strong>Description:</strong>
  <%= @job.description.html_safe %>
</p>

<p>
  <strong>Name:</strong>
  <%= @job.name %>
</p>

<p>
  <strong>Company:</strong>
  <%= @job.company.name %>
</p>
<%if @job_application %>
<%= link_to "Go to your application track.", application_path(@job_application.id) %>
<% else %>
<div class="row application_track_row">
<%= link_to "Start an Application Tracker", new_application_path(@job), class: "btn btn-danger col-md-6 col-md-offset-3 application_track" %>
</div>
<% end %>
</div>