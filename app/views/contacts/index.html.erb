<h1>Listing contacts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Primary phone</th>
      <th>Secondary phone</th>
      <th>Title</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.full_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.primary_phone %></td>
        <td><%= contact.secondary_phone %></td>
        <td><%= contact.title %></td>
        <td><%= contact.company.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
